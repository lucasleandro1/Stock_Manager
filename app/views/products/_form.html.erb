<div class="forms d-flex flex-column justify-content-center">
  <%= simple_form_for @product do |f| %>
    <div class="form d-flex flex-1 mw-100 px-5 ">
      <div class="w-100 ">
        <%= f.input :name, required: true, label: false, autofocus: true, autocomplete: "name",class: "form-control", placeholder: "name"%>
      </div>
      <div class="w-100 ml-3">
        <%= f.input :sku, required: true, label: false, autofocus: true, autocomplete: "sku", class: "form-control ", placeholder: "sku" %>
      </div>
    </div>
    <div class="px-5">
      <%= f.input :price, required: true, label: false, autofocus: true, autocomplete: "price", class: "form-control", placeholder: "price" %>
      <%= f.input :description, required: true, label: false, autofocus: true, autocomplete: "description", class: "form-control", placeholder: "description" %>
      <div class="form d-flex flex-1 mw-100 ">
        <div class="w-100 ">
          <%= f.input :stock_quantity, required: true, label: false, autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Enter quantity" %>
        </div>
        <div class="w-100 ml-3">
          <%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id, prompt: "Selecione uma categoria", input_html: { class: "form-control w-100" }, label: false %>
        </div>
      </div>
      <%= f.button :submit, class: "btn btn-primary btn-block my-3" %>
    </div>
  <% end %>
</div>