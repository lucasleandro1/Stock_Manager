
<%= simple_form_for @product do |f| %>
  <%= f.input :name, required: true, label: false, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "name"%>
  <%= f.input :price, required: true, label: false, autofocus: true, autocomplete: "price", class: "form-control", placeholder: "price" %>
  <%= f.input :sku, required: true, label: false, autofocus: true, autocomplete: "sku", class: "form-control", placeholder: "sku" %>
  <%= f.input :description, required: true, label: false, autofocus: true, autocomplete: "description", class: "form-control", placeholder: "description" %>
  <%= f.input :stock_quantity, required: true, label: "Stock Quantity", autofocus: true, autocomplete: "off", class: "form-control", placeholder: "Enter quantity" %>
  <%= f.button :submit, class: "btn btn-primary btn-block" %>
<% end %>