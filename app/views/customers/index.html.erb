<div class="h-100 w-100 pt-4">
  <div class="filtros d-flex align-items-center">
    <h1 class="title-1">Clientes</h1>
    <%= simple_form_for :search, url: customers_path, method: :get, html: { class: "form-inline" } do |f| %>
    <% end %>
  </div>

  <% if @customers.present? %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nome</th>
          <th>CPF</th>
          <th>Telefone</th>
          <th>Email</th>
          <th>Endereço</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.cpf_cnpj %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.email %></td>
            <td><%= customer.address %></td>
            <td class= "btn">
              <%= link_to "Editar", edit_customer_path(customer), class: "btn btn-sm"%>
              <%= button_to "Excluir", customer_path(customer), method: :delete, class: "btn btn-sm", data: { confirm: "Tem certeza?" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="alert alert-warning">Nenhum produto encontrado.</p>
  <% end %>
  <%= paginate @customers %>
</div>